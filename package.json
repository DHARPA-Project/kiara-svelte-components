{
	"name": "@dharpa-project/kiara-svelte-components",
	"version": "0.0.1",
	"license": "MPL-2.0",
	"private": true,
	"homepage": "https://github.com/DHARPA-Project/kiara-svelte-components",
	"bugs": {
		"url": "https://github.com/DHARPA-Project/kiara-svelte-components/issues"
	},
	"contributors": [
		{
			"name": "Caro Appleby",
			"email": "hi@caro.fyi"
		}
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/DHARPA-Project/kiara-svelte-components.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest run",
		"test:ui": "vitest --ui --coverage.enabled=true",
		"test:coverage": "vitest run --coverage"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.27.4",
		"@sveltejs/package": "^2.0.0",
		"@testing-library/jest-dom": "^6.1.5",
		"@testing-library/svelte": "^4.0.5",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitest/coverage-v8": "^1.0.4",
		"@vitest/ui": "^1.0.4",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.30.0",
		"jsdom": "^23.0.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vitest": "^1.0.4"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
